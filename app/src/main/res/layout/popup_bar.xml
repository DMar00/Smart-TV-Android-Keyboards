<?xml version="1.0" encoding="utf-8"?>
<com.dama.views.BarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:rowCount="1"
    android:columnCount="4"
    android:orientation="horizontal"
    android:id="@+id/keyboard_popup"
    android:background="@drawable/popup_bar_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:paddingHorizontal="2dp"
    android:paddingVertical="2dp">

    <RelativeLayout
        android:layout_width="@dimen/sug_key_width"
        android:layout_height="@dimen/sug_key_height"
        android:layout_marginRight="4dp">
        <ImageView
            android:id="@+id/OneKey"
            android:background="@drawable/key_sug_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/background"
            android:textStyle="bold"
            android:id="@+id/labelOneKey"
            android:text="-"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sug_key_text_size"
            android:labelFor="@id/OneKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/sug_key_width"
        android:layout_height="@dimen/sug_key_height"
        android:layout_marginRight="4dp">
        <ImageView
            android:id="@+id/TwoKey"
            android:background="@drawable/key_sug_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/background"
            android:textStyle="bold"
            android:id="@+id/labelTwoKey"
            android:text="-"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sug_key_text_size"
            android:labelFor="@id/TwoKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/sug_key_width"
        android:layout_height="@dimen/sug_key_height"
        android:layout_marginRight="4dp">
        <ImageView
            android:id="@+id/ThreeKey"
            android:background="@drawable/key_sug_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/background"
            android:textStyle="bold"
            android:id="@+id/labelThreeKey"
            android:text="-"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sug_key_text_size"
            android:labelFor="@id/ThreeKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</com.dama.views.BarView>